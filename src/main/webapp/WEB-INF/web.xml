<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" version="4.0">
	<display-name>Hotel Booking</display-name>
	<filter>
		<filter-name>CharacterSetFilter</filter-name>
		<filter-class>com.epam.hotelbooking.filter.CharacterSetFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>CharacterSetFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter>
		<filter-name>AuthorizationFilter</filter-name>
		<filter-class>com.epam.hotelbooking.filter.AuthorizationFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>AuthorizationFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter>
		<filter-name>SessionLocaleFilter</filter-name>
		<filter-class>com.epam.hotelbooking.filter.SessionLocaleFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>SessionLocaleFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	<servlet>
		<servlet-name>Main</servlet-name>
		<servlet-class>com.epam.hotelbooking.Controller</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Main</servlet-name>
		<url-pattern>/controller</url-pattern>
	</servlet-mapping>
</web-app>